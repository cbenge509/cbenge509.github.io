#!/usr/bin/env sh

# Run gts lint check
npx gts lint

# Run gts format check (per project-context.md requirements)
npx gts check

# Run npm audit (warn only, don't block)
npm audit --audit-level=high || true

# Run Semgrep security scan (warn only, don't block)
# Note: Semgrep must be installed separately (pip install semgrep or brew install semgrep)
if command -v semgrep &> /dev/null; then
  semgrep scan --config=auto --error . || true
else
  echo "Semgrep not installed - skipping security scan"
fi
